{% extends 'base.html.twig' %}

{% block title %}Album index{% endblock %}

{% block body %}
    <br>
    <h1>Table des albums</h1>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Year</th>
                <th>Artist_id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.name }}</td>
                <td>{{ album.year }}</td>
                <td>{{ album.artistId }}</td>
                <td>
                    <a href="{{ path('app_album_show', {'id': album.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                    <a href="{{ path('app_album_edit', {'id': album.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune information trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_album_new') }}" class="btn btn-sm btn-outline-secondary">Nouveau</a>
{% endblock %}
